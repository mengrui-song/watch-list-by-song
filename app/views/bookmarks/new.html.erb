
<%= render "shared/navbar"%>
<div class="container text-white mt-3 p-3 bg-dark">
  <% if @movie || (@list && @list.list_type == 'movie') %>
    <%= render "form_for_movie", list: @list, bookmark: @bookmark, movie: @movie %>
  <% elsif @person || @list.list_type == 'person' %>
    <%= render "form_for_person", list: @list, bookmark: @bookmark, person: @person %>
  <% end %>
</div>
